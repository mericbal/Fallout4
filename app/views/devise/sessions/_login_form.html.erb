<form class="form-signin">
  
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-label-group">
    <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: 'Username', id: 'inputUsername', class: 'form-control', required: true %>
    <%= f.label :username, for: 'inputUsername' %>
  </div>

  <div class="form-label-group">
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', id: 'inputPassword', class: 'form-control', required: true %>
    <%= f.label :password, for: 'inputPassword' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox mb-3">
      <label>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </label>
    </div>
  <% end -%>

  <br>
  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <p class="mt-5 mb-3 text-muted text-center">&copy; 2018</p>

<% end %>

</form>  
