<% if current_user %>
  
  <div class="table-responsive">

    <table class="table table-hover text-center table-bordered">
      
      <thead class="text-center">
        <tr id="red">
          <th> # </th><th>Name</th> <th>Location</th> <th>Effect</th> <th> found ?</th> <th>game_id</th>
        </tr>
      </thead>  

      <tbody>
      <% @bobbleheads.each.with_index(1) do |b,i| %>
        <% if current_user.bobbleheads.include? b %>
        <tr class="success">
        <% else %>
        <tr>
        <% end %>
          <td> <%= i %> </td>
          <td style="width: 200px"> <%= b.name %> </td>
          <td> <%= b.location %> </td>
          <td style="width: 200px"> <%= b.effect %> </td>
          <% if current_user.bobbleheads.include? b %>
            <td> <i id="green" class="fa fa-check"> </i></td>
          <% else %>
            <td> <%= button_to 'found it !', find_bobblehead_path(b), method: :get, class: 'btn btn-xs btn-success' %> </td>
          <% end %>
          <td style="width: 100px"> <%= b.game_id %> </td>
        </tr>
      <% end %>
      </tbody>

    </table>
    
    <!--  -->
  </div>

<!--  -->
<% else %>
<!--  -->

  <div class="table-responsive">

    <table class="table table-hover text-center table-bordered">
      
      <thead class="text-center">
        <tr id="red">
          <th> # </th><th>Name</th> <th>Location</th> <th>Effect</th> <th>game_id</th> 
        </tr>
      </thead>

      <tbody>
      <% @bobbleheads.each.with_index(1) do |b,i| %>
        <tr>
          <td> <%= i %> </td>
          <td style="width: 200px"> <%= b.name %> </td>
          <td> <%= b.location %> </td>
          <td style="width: 200px"> <%= b.effect %> </td>
          <td style="width: 100px"> <%= b.game_id %> </td>
        </tr>
      <% end %>
      </tbody>

    </table>
    <!--  -->
  </div>

<% end %>















